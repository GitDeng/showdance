<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xrefreshview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.andview.refreshview.XRefreshView
        android:id="@+id/id_custom_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xrefreshview:autoRefresh="false" >

        <com.android.app.showdance.custom.GridViewWithHeaderAndFooter
            android:id="@+id/id_main_gridview_video_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:listSelector="@color/transparent"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="4dp" />
    </com.andview.refreshview.XRefreshView>

</RelativeLayout>