<?xml version="1.0" encoding="utf-8"?>
<com.android.app.showdance.widget.AspectRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/fg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  
    <TextView
        android:id="@+id/frame_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@dimen/textsize_14"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/download_ll"
        android:layout_width="60dip"
        android:layout_height="68dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/Img_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/frame_download_image_level_selector"
            android:visibility="visible" />

        <com.android.app.showdance.widget.CircleProgressBar
            android:id="@+id/circleProgressbar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ico_free"
        android:visibility="gone"
         />

</com.android.app.showdance.widget.AspectRelativeLayout>