<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="48dip"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="65.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/bg_name" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/icon_search" />

            <EditText
                android:id="@+id/search_edt"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2.0dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入视频名称/舞友名"
                android:padding="2.0dip"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#b0c6ce"
                android:textSize="@dimen/textsize_14" />

            <Button
                android:id="@+id/btn_clear_search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2.0dip"
                android:background="@drawable/selector_btn_search_clear_text_right"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/SearchBtn"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:background="@drawable/selector_search_top_btn"
            android:gravity="center"
            android:padding="2.0dip"
            android:text="搜索"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/textsize_14" />
    </RelativeLayout>

</LinearLayout>