<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_person_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" >

    <include layout="@layout/activity_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rounded_miaobian"
                android:orientation="vertical"
                android:padding="1dip" >

                <LinearLayout
                    android:id="@+id/pmHeadPortrait_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="头像"
                        android:textColor="@color/base_black"
                        android:textSize="18dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >

                            <ImageView
                                android:id="@+id/pmHeadPortrait_img"
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:layout_gravity="right"
                                android:layout_marginLeft="5dip"
                                android:scaleType="fitXY"
                                android:src="@drawable/head_portrait" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20.0dip"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dip"
                                android:background="#55000000"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center"
                                android:text="点击修改图片"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize_10" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/arrow_right_gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/listview_divider_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_rounded_miaobian"
                android:orientation="vertical"
                android:padding="1dip" >

                <LinearLayout
                    android:id="@+id/the_stage_name_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/selector_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="艺名"
                        android:textColor="@color/base_black"
                        android:textSize="18dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/the_stage_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="没有填写"
                            android:textColor="@color/base_black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/arrow_right_gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/listview_divider_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_rounded_miaobian"
                android:orientation="vertical"
                android:padding="1dip" >

                <LinearLayout
                    android:id="@+id/the_phone_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/selector_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="手机号"
                        android:textColor="@color/base_black"
                        android:textSize="18dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/the_phone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="没有填写"
                            android:textColor="@color/base_black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/arrow_right_gray" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/listview_divider_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_rounded_miaobian"
                android:orientation="vertical"
                android:padding="1dip" >

                <LinearLayout
                    android:id="@+id/the_live_place_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/selector_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="居住地"
                        android:textColor="@color/base_black"
                        android:textSize="18dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/the_live_place_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:hint="没有填写"
                            android:text=""
                            android:textColor="@color/base_black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/arrow_right_gray" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/listview_divider_line" />

                <LinearLayout
                    android:id="@+id/the_birthday_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/selector_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="生日"
                        android:textColor="@color/base_black"
                        android:textSize="18dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/the_birthday_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="没有填写"
                            android:textColor="@color/base_black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/arrow_right_gray" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/listview_divider_line" />

                <LinearLayout
                    android:id="@+id/the_signature_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="个性签名"
                        android:textColor="@color/base_black"
                        android:textSize="18dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/the_signature_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.0"
                            android:gravity="right"
                            android:hint="没有填写"
                            android:text=""
                            android:textColor="@color/base_black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/arrow_right_gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/listview_divider_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_rounded_miaobian"
                android:orientation="vertical"
                android:padding="1dip" >

                <LinearLayout
                    android:id="@+id/the_modify_password_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/selector_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="修改密码"
                        android:textColor="@color/base_black"
                        android:textSize="18dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/arrow_right_gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/save_btn"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_finish_selector"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>