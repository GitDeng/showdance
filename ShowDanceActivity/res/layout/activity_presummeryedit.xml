<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" >

    <include layout="@layout/activity_title_bar" />

    <com.android.app.showdance.widget.AspectLinearLayout
        android:id="@+id/editor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tab_bottom_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="歌曲名字"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#b0c6ce"
            android:textSize="@dimen/textsize_26" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/compose"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="center|right"
                    android:padding="5.0dip"
                    android:text="舞曲制作:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_12" />

                <EditText
                    android:id="@+id/compose_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:focusableInTouchMode="true"
                    android:hint="请输入作曲人或歌手(可不填)"
                    android:padding="2.0dip"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#b0c6ce"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/singer"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="center|right"
                    android:padding="5.0dip"
                    android:text="编        舞:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_12" />

                <EditText
                    android:id="@+id/singer_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:focusableInTouchMode="true"
                    android:hint="请输入编舞老师姓名(可不填)"
                    android:padding="2.0dip"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#b0c6ce"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dancer"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="center|right"
                    android:padding="5.0dip"
                    android:text="表  演  者:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_12" />

                <EditText
                    android:id="@+id/dancer_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:focusableInTouchMode="true"
                    android:hint="请输入表演者姓名(可不填)"
                    android:padding="2.0dip"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#b0c6ce"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/golden_words"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="center|right"
                    android:padding="5.0dip"
                    android:text="舞蹈宣言:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_12" />

                <EditText
                    android:id="@+id/golden_words_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:focusableInTouchMode="true"
                    android:hint="请输入你想对舞友说的话(可不填)"
                    android:padding="2.0dip"
                    android:textColor="@color/white"
                    android:textColorHint="#b0c6ce"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>
        </LinearLayout>
    </com.android.app.showdance.widget.AspectLinearLayout>

    <ImageButton
        android:id="@+id/btn_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-35dp"
        android:background="@drawable/btn_edit_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5.0dip" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:paddingRight="5dp"
            android:text="字体颜色"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <SeekBar
            android:id="@+id/video_text_color"
            style="@style/Widget.SeekBar.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:focusable="true"
            android:max="7"
            android:progress="3"
            android:thumbOffset="0dp" />
    </LinearLayout>

    <!--
       <com.viewpagerindicator.TabPageIndicator  
        android:id="@+id/indicator"  
        android:layout_width="0dp"
        android:layout_weight="1"
       android:layout_height="wrap_content" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="3dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    -->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="95dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imag2"
                android:layout_width="169dp"
                android:layout_height="match_parent"
                android:background="@color/main_tab_bottom_bg"
                android:scaleType="center"
                android:src="@drawable/pt2" />

            <ImageView
                android:id="@+id/imag3"
                android:layout_width="169dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:background="@color/main_tab_bottom_bg"
                android:scaleType="center"
                android:src="@drawable/pt3" />

            <ImageView
                android:id="@+id/imag4"
                android:layout_width="169dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:background="@color/main_tab_bottom_bg"
                android:scaleType="center"
                android:src="@drawable/pt4" />

            <ImageView
                android:id="@+id/imag5"
                android:layout_width="169dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:background="@color/main_tab_bottom_bg"
                android:scaleType="center"
                android:src="@drawable/pt5" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/id_xscrollview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/id_slogan_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*温馨提示："
                android:textColor="@color/red"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.添加的片头，每张图片显示3秒，最多可添加5张图片，请根据前奏时长把握。"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.“片头一”将会放置编舞表演者以及舞蹈宣言等文字信息， 建议使用淡色背景，以突出文字。"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="3.“片头二”将会作为视频的封面出现在全国舞友面前，请重点设置。"
                android:textColor="@color/red"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_video_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="@drawable/btn_normal_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14" />

</LinearLayout>