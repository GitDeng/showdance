<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_set"
    android:orientation="horizontal">
    <Button
            android:id="@+id/subtitle_setok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="完成"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="@drawable/button_color"
            android:textSize="13.0sp" />
           <TextView
               android:id="@+id/subtitle"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:textColor="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:text="字幕设置"
    android:textSize="@dimen/textsize_18"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"/>
        
        
 <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:id="@+id/lrc_scale_layout"
        android:layout_below="@+id/subtitle"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/preview_scale_layout"
        android:gravity="center"
        android:orientation="vertical"
        >
    <gl.live.danceshow.ui.widget.VerticalSeekBar
                android:id="@+id/lrc_color"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:focusable="true"
                android:thumbOffset="0dp"
                android:progress="7"
                android:max="7"
               />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字体颜色"
        android:textColor="@color/TextColorBlack"
        android:gravity="center"
        />
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:id="@+id/lrc_textsize_layout"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/subtitle"
        android:layout_toRightOf="@+id/lrc_scale_layout"
        android:gravity="center"
        android:orientation="vertical"
        >
    <gl.live.danceshow.ui.widget.VerticalSeekBar
                android:id="@+id/lrc_textsize"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:focusable="true"
                android:thumbOffset="0dp"
                android:progress="7"
                android:max="7"
               />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字体大小"
        android:textColor="@color/TextColorBlack"
        android:gravity="center"
        />
    </LinearLayout>
      <GridView 
    android:id="@+id/subtitle_grid"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:numColumns="3"
     android:layout_below="@+id/subtitle"
     android:layout_toRightOf="@+id/lrc_textsize_layout"
    android:listSelector="@drawable/list_item_selector"
    android:background="@color/white"
    android:verticalSpacing="2dp"
    android:horizontalSpacing="2dp"
    android:stretchMode="columnWidth"
    android:gravity="center"
    android:layout_margin="10dp"
  />
    
</RelativeLayout>