<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >
    
    <RelativeLayout
        android:id="@+id/id_item_pic_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/id_item_pic_bg_sdv"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            fresco:roundedCornerRadius="5dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/default2" />

        <ImageView
            android:id="@+id/id_top_3_medal_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ico_gj"
            android:visibility="gone" />

        <Button
            android:id="@+id/id_item_rank_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_pm"
            android:clickable="false"
            android:gravity="center"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/id_item_pic_flower_count_btn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ico_flower"
            android:clickable="false"
            android:text="99999"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/id_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/id_item_pic_layout"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxEms="30"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:singleLine="false"
        android:text="视频标题文字"
        android:textColor="@color/menu_main_top_font_color"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/id_recent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/id_item_title_tv"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/id_recent_upload_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/ico_time" />

        <TextView
            android:id="@+id/id_recent_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/id_recent_upload_time_iv"
            android:gravity="center_vertical"
            android:text="10分钟前"
            android:textColor="@color/menu_main_grey_font_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_playcount_and_sharecount_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/id_item_title_tv"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/id_item_play_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/ico_play" />

        <TextView
            android:id="@+id/id_item_playcount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/id_item_play_iv"
            android:gravity="center_vertical"
            android:text="99999"
            android:textColor="@color/menu_main_grey_font_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/id_item_share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/id_item_playcount_tv"
            android:src="@drawable/ico_share" />

        <TextView
            android:id="@+id/id_item_share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/id_item_share_iv"
            android:gravity="center_vertical"
            android:text="9999"
            android:textColor="@color/menu_main_grey_font_color"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>